{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ES6"],
    "module": "CommonJS",
    "target": "ES5",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "plugins": [{
      "name": "tslint-language-service"
    }],
    "rootDir": "src",
    "sourceMap": true,
    "strict": true
  },
  "exclude": [
    ".git/",
    "dist/",
    "node_modules/"
  ]
}
